{
    "scopeName": "source.totoscript",
    "patterns": [
        {
            "match": "\\b(si|tant|que|pour|tout|faire|ou|et|non)\\b",
            "name": "keyword.control.loop.totoscript"
        },
        {
            "match": "(\\b(si|tant|que|pour|tout)\\b)(\\s*)(\\[)(.*?)(\\])",
            "name": "keyword.control.loop.totoscript",
            "captures": {
                "1": { "name": "keyword.control.loop.totoscript" },
                "4": { "name": "keyword.control.loop.totoscript" }, 
                "5": { "name": "variable.parameter.condition.totoscript" },
                "6": { "name": "keyword.control.loop.totoscript" }
            }
        },
        {
            "match": "\\b(Afficher|Saisir|Supprimer)\\b",
            "name": "support.function.totoscript"
        },
        {
            "match": "\\b(entier|reel|binaire|chaine|style)\\b",
            "name": "storage.type.totoscript"
        },
        {
            "match": "\\b[0-9]+\\b",
            "name": "constant.numeric.totoscript"
        },
        {
            "match": "#\\[(.*?)\\]",
            "name": "string.quoted.custom.totoscript",
            "captures": {
                "0": { "name": "punctuation.definition.string.totoscript" },
                "1": { "name": "string.quoted.custom.content.totoscript" }
            }
        },
        {
            "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b",
            "name": "variable.totoscript"
        },
        {
            "match": "\\b(0|1)\\b",
            "name": "constant.language.totoscript"
        },
        {
            "match": "\\b(gras|italique|souligne|barre|clignotant|inverse)\\b",
            "name": "constant.style.attribute.totoscript"
        },
        {
            "match": "\\{",
            "name": "punctuation.section.block.start.totoscript"
        },
        {
            "match": "\\}",
            "name": "punctuation.section.block.end.totoscript"
        },
        {
            "match": "\\$\\(([a-zA-Z_][a-zA-Z0-9_]*)\\)",
            "name": "variable.interpolation.totoscript",
            "captures": {
                "0": { "name": "punctuation.definition.variable.totoscript" }, 
                "1": { "name": "variable.other.totoscript" }
            }
        }
    ]
}


